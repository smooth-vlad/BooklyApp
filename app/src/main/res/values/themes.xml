<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BooklyApp" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFef8262</item>
        <item name="colorPrimaryDark">#BC674E</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background</item>
        <item name="android:background">?attr/colorSurface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.BooklyApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">?attr/colorSurface</item>
    </style>

    <style name="Theme.BooklyApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="background">?attr/colorSurface</item>
    </style>

    <style name="SmallRoundedImageOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="BigRoundedImageOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ComposeButtonLeft" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/ComposeButtonLeftTextAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/compose_button_left</item>
    </style>

    <style name="ComposeButtonRight" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/ComposeButtonRightTextAppearance</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@drawable/compose_button_right</item>
    </style>

    <style name="ComposeButtonLeftTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">18sp</item>
    </style>

    <style name="ComposeButtonRightTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
    </style>
</resources>